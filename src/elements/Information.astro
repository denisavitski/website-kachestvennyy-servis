---
import AccordionItem from './AccordionItem.astro'

export interface Props {
  class?: string
  title?: string
  list?: Array<{ title: string; value: string }>
}

const {
  class: className,
  title = 'Реквизиты свидетельства о&nbsp;государственной регистрации в&nbsp;качестве юридического лица',
  list = [
    {
      title: 'Полное наименование:',
      value: 'Общество с ограниченной ответственностью «Качественный сервис»',
    },
    {
      title: 'ИНН:',
      value: '211093334',
    },
    {
      title: 'ОГРН:',
      value: '8885001634701',
    },
    {
      title: 'Руководитель организации:',
      value: 'Куприянов Игорь Олегович',
    },
    {
      title: 'Место нахождения органов управления:',
      value: 'МО,&nbsp;г. о. Люберцы, д.п. Красково, Егорьевское ш., д.&nbsp;1, корпус 6',
    },
    {
      title: 'Почтовый адрес:',
      value: 'МО,&nbsp;г. о. Люберцы, д.п. Красково, Егорьевское ш., д.&nbsp;1, корпус 6',
    },
    {
      title: 'Телефон приемной:',
      value: '7 991 284-38-28',
    },
    {
      title: 'Телефон диспетчерской:',
      value: '8 800 101-16-49',
    },
    {
      title: 'Официальный сайт в сети Интернет:',
      value: 'www.kservice_uk.ru',
    },
    {
      title: 'Адрес электронной почты:',
      value: 'Info@kservice-uk.ru',
    },
    {
      title: 'Сокращенное наименование:',
      value: 'УК “Качественный сервис”',
    },
    {
      title: 'Дата государственной регистрации:',
      value: '07.09.2024',
    },
    {
      title: 'КПП:',
      value: '435010101',
    },
  ],
  ...rest
} = Astro.props
---

<AccordionItem
  {...rest}
  class={`information ${className || ''}`}
>
  <div
    class="information__head"
    slot="head"
  >
    <h3
      class="font-h3 font-mob-p1 information__title"
      set:html={title}
    />
  </div>

  <ul class="information__list">
    {
      list.map((item) => {
        return (
          <li class="font-p1 font-mob-p3 information__list__item">
            <div
              class="information__list__item__title"
              set:html={item.title}
            />
            <div
              class="information__list__item__value"
              set:html={item.value}
            />
          </li>
        )
      })
    }
  </ul>
</AccordionItem>

<style is:global>
  .information {
  }

  .information__head {
  }

  .information__title {
    max-width: 123rem;

    @media (max-width: 768px) {
      max-width: 20rem;
    }
  }

  .information__list {
    display: grid;
    grid-auto-rows: max-content;
    gap: 3rem;
  }

  .information__list__item {
    display: grid;
    grid-template-columns: 60rem 1fr;
    gap: 3rem;

    @media (max-width: 768px) {
      grid-template-columns: 100%;
      gap: 1rem;
    }
  }

  .information__list__item__title {
  }

  .information__list__item__value {
  }
</style>
