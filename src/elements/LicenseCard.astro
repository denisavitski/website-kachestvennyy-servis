---
import Icon from './Icon.astro'
import Image, { type ImageDataProps } from './Image.astro'

export interface Props {
  class?: string
  image?: ImageDataProps
  description?: string
}

const {
  class: className,
  image = { src: '/images/certificates/1.jpg' },
  description = 'Сертификат, подтверждающий, что&nbsp;система менеджмента качества, применяемая в&nbsp;УК&nbsp;«Качественный сервис» при&nbsp;предоставлении услуг, соответствует требованиям STB ISO 9001–2009.',
  ...rest
} = Astro.props
---

<div
  {...rest}
  class:list={['license-card', className]}
>
  <Image
    {...image}
    lazy
    lazyBackground
    cover
    class="license-card__image"
  />

  <p
    class="font-p2 font-mob-p3 license-card__description"
    set:html={description}
  />

  <Icon
    class="license-card__logo"
    name="logo"
  />
</div>

<style is:global>
  .license-card {
    position: relative;

    display: inline-flex;
    gap: 5rem;

    padding: 3rem;

    border-radius: var(--border-radius);
    background-color: var(--color-background);

    @media (max-width: 768px) {
      flex-direction: column;
      align-items: center;
      gap: 3rem;
      padding: 2rem;
    }
  }

  .license-card__image {
    width: 32.4rem;
    height: 45.8rem;

    @media (max-width: 768px) {
      max-width: 100%;
      width: 29.5rem;
      height: 45.8rem;
    }
  }

  .license-card__description {
    width: 32.4rem;

    @media (max-width: 768px) {
      width: 100%;
    }
  }

  .license-card__logo {
    position: absolute;
    bottom: 3rem;
    right: 3rem;

    width: 4rem;
    height: 4rem;

    @media (max-width: 768px) {
      display: none;
    }
  }
</style>
