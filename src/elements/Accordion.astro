---
export interface Props {
  class?: string
  multiple?: boolean
}

const { class: className, multiple, ...rest } = Astro.props
---

<e-accordion
  {...rest}
  class:list={['accordion', className]}
  multiple={multiple}
>
  <slot />
</e-accordion>

<style is:global>
  .accordion {
    display: grid;
    gap: 3rem;
    grid-auto-rows: max-content;
  }
</style>
