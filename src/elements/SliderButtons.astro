---
import SliderButton from './SliderButton.astro'

export interface Props {
  class?: string
}

const { class: className, ...rest } = Astro.props
---

<div
  {...rest}
  class:list={['slider-buttons', className]}
  slot="static"
>
  <SliderButton type={'prev'} />
  <SliderButton type={'next'} />
</div>

<style is:global>
  .slider-buttons {
    e-scroll & {
      position: absolute;
      right: 0;
      bottom: calc(100% + 5rem);
    }

    display: none;
    gap: 3rem;

    e-scroll.has-overflow & {
      display: flex;
    }

    @media (max-width: 768px) {
      e-scroll & {
        bottom: unset;
        left: 50%;
        top: calc(100% + 3rem);
        transform: translateX(-50%);
      }
    }
  }
</style>
