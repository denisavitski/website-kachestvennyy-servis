---
import Button from '@elements/Button.astro'
import Image, { type ImageDataProps } from '@elements/Image.astro'

export interface Props {
  heading?: string
  description?: string
  image?: ImageDataProps
}

const {
  heading = 'Сантехника и&nbsp;отопление',
  description = 'Нужна помощь или консультация? Мы готовы помочь!',
  image = { src: '/images/service/1.jpg', alt: '' },
} = Astro.props
---

<!-- BLOCK -->
<div class="services-intro">
  <h1
    class="font-h1 font-mob-h1 services-intro__heading"
    set:html={heading}
  />

  <Image
    class="services-intro__image"
    {...image}
    lazy
    lazyBackground
    cover
  />

  <div class="services-intro__consultation">
    <p
      class="font-p2 font-mob-p1 services-intro__consultation__description"
      set:html={description}
    />
    <Button
      class="services-intro__consultation__button"
      modal="feedback"
      >Связаться</Button
    >
  </div>
</div>

<style is:global>
  .services-intro {
    padding: 0 var(--screen-horisontal-padding) var(--section-vertical-padding)
      var(--screen-horisontal-padding);
  }

  .services-intro__heading {
    margin-bottom: 5rem;

    @media (max-width: 768px) {
      margin-bottom: 3rem;
    }
  }

  .services-intro__image {
    width: 100%;
    height: 60rem;

    @media (min-width: 769px) {
      clip-path: url(#shape-2);
    }

    @media (max-width: 768px) {
      height: 19.8rem;
      border-radius: var(--border-radius);

      margin-bottom: 1rem;
    }
  }

  .services-intro__consultation {
    width: 45.3rem;
    min-height: 26.5rem;
    padding: 5rem;
    margin-top: -26.5rem;
    border-radius: 2rem;
    background-color: var(--color-background);

    @media (max-width: 768px) {
      width: 100%;
      margin-top: 0;
      padding: 2rem;
      min-height: 21.6rem;
    }
  }

  .services-intro__consultation__description {
    margin-bottom: 3.5rem;

    text-align: center;

    @media (max-width: 768px) {
      margin-bottom: 3rem;
    }
  }

  .services-intro__consultation__button {
    width: 100%;
  }

  .services-intro .services-intro__consultation__button {
    @media (min-width: 769px) {
      height: 7rem;
    }

    @media (max-width: 768px) {
      height: 6.5rem;
    }
  }
</style>
