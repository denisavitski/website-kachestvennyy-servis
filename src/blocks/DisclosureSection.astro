  heading?: string
  information?: Array<Omit<InformationProps, 'class'>>
}

const {
  heading = 'Раскрытие информации',
  information = [
    {
      title:
        'Реквизиты свидетельства о&nbsp;государственной регистрации в&nbsp;качестве юридического лица',
      list: [
        {
          title: 'Полное наименование:',
          value: 'Общество с ограниченной ответственностью «Качественный сервис»',
        },
        {
          title: 'ИНН:',
          value: '211093334',
        },
        {
          title: 'ОГРН:',
          value: '8885001634701',
        },
        {
          title: 'Руководитель организации:',
          value: 'Куприянов Игорь Олегович',
        },
        {
          title: 'Место нахождения органов управления:',
          value: 'МО,&nbsp;г. о. Люберцы, д.п. Красково, Егорьевское ш., д.&nbsp;1, корпус 6',
        },
        {
          title: 'Почтовый адрес:',
          value: 'МО,&nbsp;г. о. Люберцы, д.п. Красково, Егорьевское ш., д.&nbsp;1, корпус 6',
        },
        {
          title: 'Телефон приемной:',
          value: '7 991 284-38-28',
        },
        {
          title: 'Телефон диспетчерской:',
          value: '8 800 101-16-49',
        },
        {
          title: 'Официальный сайт в сети Интернет:',
          value: 'www.kservice_uk.ru',
        },
        {
          title: 'Адрес электронной почты:',
          value: 'Info@kservice-uk.ru',
