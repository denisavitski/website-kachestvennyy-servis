---
import Address, { type Props as AddressProps } from '@elements/Address.astro'
import Contact, { type Props as ContactProps } from '@elements/Contact.astro'

export interface Props {
  office?: AddressProps
  contacts?: Array<ContactProps>
}

const {
  office,
  contacts = [
    {
      image: { src: '/images/icons/communication-office.svg' },
      title: 'Офис',
      description: 'Мы&nbsp;поможем с&nbsp;любыми вопросами',
      items: [
        { title: 'Телефон', value: '7 991 284-38-28' },
        { title: 'Email', value: 'Info@kservice-uk.ru' },
      ],
    },
    {
      image: { src: '/images/icons/24-7-control-room.svg' },
      title: 'Диспетчерская 24/7',
      items: [
        { title: 'Телефон', value: '8 800 101-16-49' },
        { title: 'Email', value: 'Info@kservice-uk.ru' },
      ],
    },
  ],
} = Astro.props
---

<!-- BLOCK -->
<div class="contacts">
  <Address {...office} />
  {
    contacts.map((contact) => {
      return <Contact {...contact} />
    })
  }
</div>

<style is:global>
  .contacts {
    padding: var(--section-vertical-padding) var(--screen-horisontal-padding);

    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10.1rem 4.8rem;

    @media (max-width: 768px) {
      grid-template-columns: 100%;
      gap: 3rem;
    }

    .address {
      @media (min-width: 769px) {
        grid-column: 1 / 3;
      }
    }
  }
</style>
